<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!--Brand theme-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/window_background_color</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Texts-->
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>

        <!--Status bar and navigation-->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!--Windows-->
        <item name="android:windowBackground">@color/window_background_color</item>
        <item name="android:windowContentTransitions">true</item>

        <!--Hide actionbar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--Divider-->
        <item name="android:dividerHeight">@dimen/divider_height</item>
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="colorControlNormal">@android:color/white</item>

        <!--Seekbar-->
        <item name="android:seekBarStyle">@style/YipTheme.Seekbar</item>
        <item name="seekBarStyle">@style/YipTheme.Seekbar
        </item> <!--This is essential for some devices, e.g. Samsung-->

        <!--Alert dialog-->
        <item name="materialAlertDialogTheme">@style/AppTheme.Dialog.Alert</item>
    </style>

    <!--Alert dialogs-->
    <style name="AppTheme.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="dialogCornerRadius">@dimen/spacing_micro</item>
    </style>
</resources>

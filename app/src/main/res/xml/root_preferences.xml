<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.preference.PreferenceCategory android:title="General">

        <androidx.preference.ListPreference
            android:defaultValue="@string/order_title_a_to_z"
            android:entries="@array/sort_order_titles"
            android:entryValues="@array/sort_order_values"
            android:icon="@drawable/ic_sort"
            android:key="@string/pref_key_order"
            android:title="@string/pref_title_sort_by" />

        <androidx.preference.ListPreference
            android:defaultValue="dd-MMM-yyyy"
            android:entries="@array/date_format_titles"
            android:entryValues="@array/date_format_values"
            android:icon="@drawable/ic_date_range"
            android:key="@string/pref_key_date_format"
            android:title="Date format" />

        <androidx.preference.ListPreference
            android:defaultValue="hh:mm a"
            android:entries="@array/time_format_titles"
            android:entryValues="@array/time_format_values"
            android:icon="@drawable/ic_clock"
            android:key="@string/pref_key_time_format"
            android:title="Time format" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="@string/widget_header">

        <androidx.preference.Preference
            android:icon="@drawable/ic_widget"
            android:key="@string/pref_key_add_widget"
            android:title="@string/pref_title_add_widget" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory
        android:key="@string/pref_key_pro_version_header"
        android:title="@string/pro_header"
        app:isPreferenceVisible="false"
        tools:isPreferenceVisible="true">

        <androidx.preference.Preference
            android:icon="@drawable/ic_money"
            android:key="@string/pref_key_buy_pro"
            android:title="@string/pref_title_buy_pro" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="@string/legal_header">
        <androidx.preference.Preference
            android:icon="@drawable/ic_privacy"
            android:key="@string/pref_key_privacy_policy"
            android:title="@string/pref_title_privacy_policy" />

        <androidx.preference.Preference
            android:icon="@drawable/ic_open_source"
            android:key="@string/pref_key_open_source_licences"
            android:title="@string/pref_title_open_source_licences" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="@string/about_header">

        <androidx.preference.Preference
            android:icon="@drawable/ic_info"
            android:key="@string/pref_key_version"
            android:title="@string/pref_title_version" />

        <androidx.preference.Preference
            android:icon="@drawable/ic_changelog"
            android:key="@string/pref_key_changelog"
            android:title="@string/pref_title_changelog" />

        <androidx.preference.Preference
            android:icon="@drawable/ic_mail"
            android:key="@string/pref_key_contact"
            android:title="@string/pref_title_contact" />

        <androidx.preference.Preference
            android:icon="@drawable/ic_share"
            android:key="@string/pref_key_share_friends"
            android:title="@string/pref_title_share_friend" />
    </androidx.preference.PreferenceCategory>

    <com.kevalpatel2106.yip.settings.CentralTitlePreference android:summary="@string/pref_title_made_love_with_uk" />
</androidx.preference.PreferenceScreen>

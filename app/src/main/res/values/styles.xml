<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Dashboard screen-->
    <style name="DashboardListCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/spacing_nano</item>
        <item name="android:layout_marginEnd">@dimen/spacing_micro</item>
        <item name="android:layout_marginStart">@dimen/spacing_micro</item>
        <item name="android:layout_marginTop">@dimen/spacing_nano</item>
    </style>

    <!--Edit deadline screen-->
    <style name="EditScreenTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAppearance">@style/MediumText.Accent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/spacing_nano</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
    </style>

    <style name="EditScreenSubTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/spacing_micro</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance">@style/SmallText.Secondary</item>
    </style>

    <style name="EditScreenImageStyle">
        <item name="android:layout_marginTop">@dimen/spacing_pico</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="EditScreenDatesStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/MediumText.Primary</item>
        <item name="android:layout_marginTop">@dimen/spacing_micro</item>
    </style>

    <style name="EditScreenTextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">@dimen/spacing_nano</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textAppearance">@style/MediumText.Primary</item>
        <item name="android:textDirection">anyRtl</item>
    </style>

    <!--Payment screen-->
    <style name="PaymentScreenProBenefitTextStyle" parent="MediumText.Primary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <!--Detail screen-->
    <style name="DetailScreenToolbarButtonStyle">
        <item name="android:layout_width">@dimen/spacing_xxlarge</item>
        <item name="android:layout_height">@dimen/spacing_xxlarge</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/detail_title_button_padding</item>
        <item name="android:tint">@color/icon_color</item>
    </style>

    <!--Bottom navigation themes-->
    <style name="BottomDrawerOptions" parent="MediumText.White">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:drawableTint" tools:ignore="NewApi">@android:color/white</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--TODO Categorize styles-->
</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/battery_list_row"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_row_height"
    android:orientation="horizontal"
    android:paddingStart="@dimen/spacing_small"
    android:paddingEnd="@dimen/spacing_small"
    tools:background="@android:color/white">

    <TextView
        android:id="@+id/widget_deadline_percent_tv"
        style="@style/MediumText.Primary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:textStyle="bold"
        tools:text="100%" />

    <TextView
        android:id="@+id/widget_deadline_name_tv"
        style="@style/MediumText.Primary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/spacing_small"
        android:layout_toStartOf="@id/widget_deadline_percent_tv"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/widget_text_color"
        tools:text="@tools:sample/lorem/random" />
</RelativeLayout>

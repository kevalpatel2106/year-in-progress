<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.kevalpatel2106.yip.detail.DetailViewModel" />

        <variable
            name="view"
            type="com.kevalpatel2106.yip.detail.DetailFragment" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detail_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing_anti"
        android:layout_marginEnd="@dimen/spacing_micro"
        android:layout_marginStart="@dimen/spacing_micro"
        android:layout_marginTop="@dimen/spacing_nano"
        app:backgroundColor="@{viewModel.viewState.backgroundColor}"
        app:cardBackgroundColor="@color/colorPrimaryLight"
        app:cardCornerRadius="@dimen/spacing_micro"
        app:cardElevation="@dimen/spacing_micro">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/detail_close_iv"
                style="@style/DetailToolbarButtonStyle"
                android:layout_alignParentStart="true"
                android:onClick="@{() -> view.closeDetail()}"
                app:srcCompat="@drawable/ic_close" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/option_menu"
                style="@style/DetailToolbarButtonStyle"
                android:layout_alignParentEnd="true"
                android:clickable="@{!viewModel.isDeleting}"
                android:onClick="@{() -> view.showDetailOptions()}"
                app:srcCompat="@drawable/ic_overflow" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/detail_close_iv"
                android:fillViewport="true"
                android:paddingBottom="@dimen/spacing_anti"
                android:paddingEnd="@dimen/spacing_micro"
                android:paddingStart="@dimen/spacing_micro"
                android:scrollbars="none">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/detail_constraint_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/detail_title_tv"
                        style="@style/LargeText.White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_micro"
                        android:fontFamily="@font/lato"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@{viewModel.viewState.progressTitleText}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="@tools:sample/lorem/random" />

                    <ProgressBar
                        android:id="@+id/detail_progressbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_micro"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:max="100"
                        android:progress="@{viewModel.viewState.progressPercent}"
                        android:scaleY="2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/detail_progress_percent_tv"
                        app:setProgressTint="@{viewModel.viewState.progressBarColor}"
                        tools:progress="50" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/detail_start_time_tv"
                        style="@style/SmallText.White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_micro"
                        android:fontFamily="@font/lato"
                        android:text="@{viewModel.viewState.progressStartTimeText}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/detail_progressbar"
                        tools:text="@tools:sample/date/ddmmyy" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/detail_end_time_tv"
                        style="@style/SmallText.White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_micro"
                        android:fontFamily="@font/lato"
                        android:text="@{viewModel.viewState.progressEndTimeText}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/detail_progressbar"
                        tools:text="@tools:sample/date/ddmmyy" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/detail_progress_percent_tv"
                        style="@style/LargeText.Accent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxlarge"
                        android:fontFamily="@font/lato"
                        android:text="@{viewModel.viewState.progressPercentText}"
                        android:textColor="@{viewModel.viewState.progressPercentTextColor}"
                        android:textSize="@dimen/progress_percent_text_size"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/detail_title_tv"
                        tools:text="46%" />

                    <ViewFlipper
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxlarge"
                        app:displayChild="@{viewModel.viewState.isProgressComplete.value}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/detail_end_time_tv">

                        <!--0. Time left-->
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/detail_time_left_tv"
                            style="@style/LargeText.White"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@{viewModel.viewState.progressTimeLeftText}"
                            android:textSize="@dimen/time_left_text_size"
                            tools:text="23 days 1 hour 13 minutes" />

                        <!--1. Share messages-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/spacing_huge"
                                android:layout_height="@dimen/spacing_huge"
                                android:src="@drawable/ic_achived" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/LargeText.White"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_micro"
                                android:gravity="center"
                                android:paddingEnd="@dimen/spacing_small"
                                android:paddingStart="@dimen/spacing_small"
                                android:text="@string/detail_progress_complete_title"
                                android:textColor="@{viewModel.viewState.progressAchievementTextColor}"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/MediumText.White"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_small"
                                android:gravity="center"
                                android:paddingEnd="@dimen/spacing_small"
                                android:paddingStart="@dimen/spacing_small"
                                android:text="@string/detail_progress_complete_message" />

                            <com.google.android.material.button.MaterialButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_small"
                                android:backgroundTint="@android:color/white"
                                android:clickable="@{!viewModel.isDeleting}"
                                android:onClick="@{() -> view.showShareAchievements()}"
                                android:text="@string/detail_progress_complete_share_btn_title"
                                android:textColor="@color/colorPrimaryText" />
                        </LinearLayout>
                    </ViewFlipper>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>